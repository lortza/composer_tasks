<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-12">
    <h1>Listing User Tasks</h1>
  </div><!--col-sm-12-->
</div><!--row-->

<div class="row">
  <div class="col-sm-4">
        
      <%= link_to new_user_task_path, remote: true do %>
        <button class="btn btn-default add-task"><%= fa_icon "plus" %> Add Task</button>
      <% end %>

    <div id="task-form"></div><!--form will be placed in here-->

  </div><!--col-sm-4-->

  <div class="col-sm-8">
    <div id="tasks">
      <ul>
      <%= render @user_tasks %>
      </ul>


    </div><!--tasks-->
  </div><!--col-sm-8-->

</div><!--row-->

    


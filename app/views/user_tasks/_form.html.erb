<%= simple_form_for(@user_task, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, as: :text, placeholder: "Make the Bed" %>
    <%= f.input :due, as: :string, placeholder: "Click to Select Date" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
